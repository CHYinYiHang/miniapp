.canlendar-inner-content {
  width: 90%;
  background-color: #fff;
  border-radius: 16rpx;
  margin: 0 auto;
  padding-bottom: 40rpx;
  position: relative;
  z-index: 2;
  top: -80rpx;
}

.canlendar-text {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.canlendar-text .year-month-text {
  font-size: 34rpx;
  color: #333;
}

.canlendar-text .options-text {
  font-size: 30rpx;
  color: #00bdd4;
}

.canlendar-content .weekdays {
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  font-size: 28rpx;
  color: #737674;
  justify-content: space-around;
}

.canlendar-content .weekdays .weekday-item {
  width: 14.2%;
  text-align: center;
}

.canlendar-content .days-content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  font-size: 30rpx;
  color: #333;
  justify-content: space-around;
}

.canlendar-content .days-content .days-item {
  width: 14.2%;
  text-align: center;
}

.canlendar-content .days-content .days-item .number-item {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 10rpx auto;
  border-radius: 50%;
}

.canlendar-content .days-content .days-item .other-month {
  color: #999;
}

.canlendar-content .days-content .days-item .number-item .checked-icon {
  width: 80%;
  height: 80%;
  vertical-align: middle;
}